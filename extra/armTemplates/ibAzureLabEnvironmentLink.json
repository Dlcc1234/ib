{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
       "storageAccountName": {
            "defaultValue": "[concat('iblabs', '',utcNow('yMMddHHmms'))]",
            "type": "string",
            "metadata": {
                "description": "Choisir un nom unique (minuscules et chiffres) pour le Storage Account du Shell."
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-11-01",
            "name": "ibLabVnet",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.255.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "name": "10.255.0",
                        "properties": {
                            "addressPrefix": "10.255.0.0/24"
                        }
                    },
                    {
                        "name": "AzureBastionSubnet",
                        "properties": {
                            "addressPrefix": "10.255.255.0/24"
                        }
                    }
                ],
                "enableDdosProtection": false
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2021-08-01",
            "name": "[parameters('storageAccountName')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "kind": "StorageV2",
            "properties": {
                "minimumTlsVersion": "TLS1_2",
                "allowBlobPublicAccess": false,
                "allowSharedKeyAccess": true,
                "networkAcls": {
                    "bypass": "AzureServices",
                    "defaultAction": "Allow"
                },
                "supportsHttpsTrafficOnly": true,
                "accessTier": "Hot"
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2020-11-01",
            "name": "ibLabVnet/10.255.0",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', 'ibLabVnet')]"
            ],
            "properties": {
                "addressPrefix": "10.255.0.0/24"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts/fileServices",
            "apiVersion": "2021-08-01",
            "name": "[concat(parameters('storageAccountName'), '/default')]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
            ],
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts/fileServices/shares",
            "apiVersion": "2021-08-01",
            "name": "[concat(parameters('storageAccountName'), '/default/cloudshell')]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts/fileServices', parameters('storageAccountName'), 'default')]",
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
            ],
            "properties": {
                "accessTier": "Hot",
                "shareQuota": 5120,
                "enabledProtocols": "SMB"
            }
        },
        {
            "type": "Microsoft.Resources/templateSpecs",
            "apiVersion": "2021-05-01",
            "name": "ibAzureLabBastion",
            "location": "[resourceGroup().location]",
            "properties": {
               "description": "Ce modèle crée le nécessaire pour un Bastion pour les ateliers Azure ib.",
                "displayName": "ibAzureLabBastion"
            }
        },
        {
            "type": "Microsoft.Resources/templateSpecs/versions",
            "apiVersion": "2021-05-01",
            "name": "[format('{0}/{1}', 'ibAzureLabBastion', '1.0')]",
                "location": "[resourceGroup().location]",
                "dependsOn": [
                  "[resourceId('Microsoft.Resources/templateSpecs','ibAzureLabBastion')]"
                ],
                "properties": {
                  "mainTemplate": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "variables": {},
                    "resources": [
                        {
                            "type": "Microsoft.Network/publicIPAddresses",
                            "apiVersion": "2020-08-01",
                            "name": "ibLabBastionIp",
                            "location": "[[resourceGroup().location]",
                            "sku": {
                                "name": "Standard"
                            },
                            "properties": {
                                "publicIPAllocationMethod": "Static"
                            }
                        },
                        {
                            "type": "Microsoft.Network/virtualNetworks/subnets",
                            "apiVersion": "2020-11-01",
                            "name": "ibLabVnet/AzureBastionSubnet",
                            "properties": {
                                "addressPrefix": "10.255.255.0/24"
                            }
                        },
                        {
                            "type": "Microsoft.Network/bastionHosts",
                            "apiVersion": "2020-11-01",
                            "name": "ibLabBastion",
                            "location": "[[resourceGroup().location]",
                            "dependsOn": [
                                "[[resourceId('Microsoft.Network/publicIPAddresses', 'ibLabBastionIp')]",
                                "[[resourceId('Microsoft.Network/virtualNetworks/subnets', 'ibLabVnet', 'AzureBastionSubnet')]"
                            ],
                            "sku": {
                                "name": "Basic"
                            },
                            "properties": {
                                "ipConfigurations": [
                                    {
                                        "name": "IpConf",
                                        "properties": {
                                            "publicIPAddress": {
                                                "id": "[[resourceId('Microsoft.Network/publicIPAddresses','ibLabBastionIp')]"
                                            },
                                            "subnet": {
                                                "id": "[[resourceId('Microsoft.Network/virtualNetworks/subnets', 'ibLabVnet', 'AzureBastionSubnet')]"
                                            }
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                } 
            }
        },
        {
            "type": "Microsoft.Resources/templateSpecs",
            "apiVersion": "2021-05-01",
            "name": "ibAzureLabVM",
            "location": "[resourceGroup().location]",
            "properties": {
               "description": "Ce modèle crée le nécessaire pour une VM administrative pour les ateliers Azure ib.",
                "displayName": "ibAzureLabVM"
            }
        },
        {
            "type": "Microsoft.Resources/templateSpecs/versions",
            "apiVersion": "2021-05-01",
            "name": "[format('{0}/{1}', 'ibAzureLabVM', '1.0')]",
                "location": "[resourceGroup().location]",
                "dependsOn": [
                  "[resourceId('Microsoft.Resources/templateSpecs','ibAzureLabVM')]"
                ],
                "properties": {
                    "mainTemplate": {
                        "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                        "contentVersion": "1.0.0.0",
                        "resources": [
                          {
                            "type": "Microsoft.Resources/deployments",
                            "apiVersion": "2020-06-01",
                            "name": "linkedTemplate",
                            "properties": {
                              "mode": "Incremental",
                              "templateLink": {
                                "uri": "https://raw.githubusercontent.com/renaudwangler/ib/master/extra/ibAzureLabEnvironmentVM.json",
                                "contentVersion":"1.0.0.0"
                              }
                            }
                          }
                        ],
                        "outputs": {}
                      }
                }
        },
        {
            "type": "Microsoft.Authorization/locks",
            "apiVersion": "2015-01-01",
            "name": "ibLabVerrou",
            "properties":
            {
                "level": "CannotDelete",
                "notes": "Ce groupe de ressources est vérouillé afin d'éviter une suppression accidentelle."
            }
        }

    ]
}