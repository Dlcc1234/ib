{
    "$schema": "http://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualMachineSize": {
          "type": "string",
          "defaultValue": "Standard_DS1_v2"
      },
      "adminPassword": {
          "type": "secureString",
          "defaultValue": "Pa55w.rd1234",
          "metadata": {
            "description": "La valeur par d√©faut est 'Pa55w.rd1234'."
          }
        }
    },
    "variables": {},
    "resources": [
        {
           "name": "ibLabNic",
           "type": "Microsoft.Network/networkInterfaces",
           "apiVersion": "2021-03-01",
           "location": "[[resourceGroup().location]",
           "dependsOn": [
                "Microsoft.Network/networkSecurityGroups/ibLabNSG",
                "Microsoft.Network/publicIpAddresses/ibLabVmIP"
                ],
           "properties": {
               "ipConfigurations": [
                    {
                       "name": "ipconfig1",
                       "properties": {
                            "subnet": {
                                "id": "[[resourceId('Microsoft.Network/virtualNetworks/subnets', 'ibLabVnet', '10.255.0')]"
                            },
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIpAddress": {
                                "id": "[[resourceId(resourceGroup().name,'Microsoft.Network/publicIpAddresses', 'ibLabVmIP')]",
                                "properties": {
                                    "deleteOption": "Delete"
                                }
                            }
                        }
                    }
                ],
                "enableAcceleratedNetworking": true,
                "networkSecurityGroup": {
                    "id": "[[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', 'ibLabNSG')]"
                }
            }
        },
        {
           "name": "ibLabNSG",
           "type": "Microsoft.Network/networkSecurityGroups",
           "apiVersion": "2019-02-01",
           "location": "[[resourceGroup().location]",
           "properties": {
                "securityRules": [
                    {
                        "name": "RDPin",
                        "properties": {
                            "priority": 300,
                            "protocol": "TCP",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourceAddressPrefix": "*",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*",
                            "destinationPortRange": "3389"
                        }
                    }
                ]
            }
        },
        {
           "name": "ibLabVmIP",
           "type": "Microsoft.Network/publicIpAddresses",
           "apiVersion": "2019-02-01",
           "location": "[[resourceGroup().location]",
           "properties": {
                "publicIpAllocationMethod": "Dynamic"
            },
           "sku": {
                "name": "Basic"
            }
        },
        {
           "name": "ibLabVM",
           "type": "Microsoft.Compute/virtualMachines",
           "apiVersion": "2021-07-01",
           "location": "[[resourceGroup().location]",
           "dependsOn": [
                "Microsoft.Network/networkInterfaces/ibLabNic"
            ],
           "properties": {
               "hardwareProfile": {
                   "vmSize": "[[parameters('virtualMachineSize')]"
                },
           "storageProfile": {
               "osDisk": {
                   "name": "ibLabOsDisk",
                   "createOption": "fromImage",
                   "managedDisk": {
                       "storageAccountType": "Standard_LRS"
                    },
                   "deleteOption": "Delete"
                },
               "imageReference": {
                   "publisher": "MicrosoftWindowsServer",
                   "offer": "WindowsServer",
                   "sku": "2022-datacenter-azure-edition",
                   "version": "latest"
                }
            },
            "networkProfile": {
               "networkInterfaces": [
                    {
                       "id": "[[resourceId('Microsoft.Network/networkInterfaces', 'ibLabNic')]",
                       "properties": {
                           "deleteOption": "Delete"
                        }
                    }
                ]
            },
            "osProfile": {
                "computerName": "ibLabVM",
                "adminUsername": "Student",
                "adminPassword": "[[parameters('adminPassword')]",
                "windowsConfiguration": {
                    "enableAutomaticUpdates": true,
                    "provisionVmAgent": true,
                    "patchSettings": {
                        "enableHotpatching": false,
                        "patchMode": "AutomaticByOS"
                    }
                }
            }
        }
    }
]
}